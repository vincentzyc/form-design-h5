$primary-color = #409EFF;

.widget-list /deep/ {
  .wg-padding {
    padding: 5px 10px;
  }

  .widget-form-list {
    position: relative;
    transition: 0.2s;
    overflow: hidden;
    background-color: #fff;
  }

  .widget-view {
    margin: 0;
    // background: #fff;
    position: relative;

    input::-webkit-input-placeholder {
      color: #666;
      opacity: 1;
    }

    input[type='date'] {
      &::-webkit-inner-spin-button {
        display: none;
      }

      &::-webkit-clear-button {
        display: none;
      }
    }
  }

  .wg-item {
    display: flex;
    line-height: 50px;
  }

  .wg-staticText {
    line-height: 1.6;
    background-repeat: no-repeat;
    background-size: 100% 100%;
    background-position: 0 0;
  }

  .wg-imgshow, .wg-imgslide {
    margin: -5px -10px;
  }

  .wg-input, .wg-select {
    width: 100%;
    height: 40px;
    margin: 5px 0;
    color: #666;
    font-size: 14px;
    border-radius: 4px;
    border: 1px solid #ddd;
    outline: none;
    text-indent: 10px;
    // background: #fff;
    transition: 0.3s;
  }

  .wg-title {
    font-size: 14px;
    margin-right: 10px;
    color: #333;
  }

  .wg-checkbox {
    .label {
      float: left;
      cursor: pointer;
      position: relative;
      margin-right: 10px;
    }

    .label span {
      background: #fff;
      padding: 10px;
      border-radius: 10px;
      border: 1px solid #ddd;
    }

    .wg-checkbox-input:checked + span {
      background-color: $primary-color;
      border-color: $primary-color;
      color: #fff;
    }
  }

  .wg-switch {
    .label {
      display: flex;
      cursor: pointer;
    }

    .wg-switch-core {
      display: inline-block;
      position: relative;
      margin: 0;
      width: 40px;
      height: 20px;
      border: 1px solid #dcdfe6;
      outline: 0;
      border-radius: 10px;
      box-sizing: border-box;
      background: #dcdfe6;
      transition: border-color 0.3s, background-color 0.3s;
    }

    .wg-switch-core:after {
      content: '';
      position: absolute;
      top: 1px;
      left: 1px;
      border-radius: 100%;
      transition: all 0.3s;
      width: 16px;
      height: 16px;
      background-color: #fff;
    }

    .wg-switch-input:checked + span {
      background-color: $primary-color;
      border-color: $primary-color;
      color: #fff;
    }

    .wg-switch-input:checked + span::after {
      left: 100%;
      margin-left: -17px;
    }
  }

  .wg-button {
    width: 100%;
    color: #fff;
    height: 46px;
    line-height: 46px;
    font-size: 18px;
    outline: none;
    border: none;
    letter-spacing: 2px;
    border-radius: 20px;
    text-align: center;
    // box-shadow: 0 3px 10px 1px #90c7ff;
  }

  .wg-wechat {
    .wg-wechat-wrap {
      padding: 10px;
    }

    .wechat-avatar {
      width: 32px;
      height: 32px;
      margin-right: 10px;
      border-radius: 50%;
      overflow: hidden;
    }

    .wechat-btn {
      text-align: center;
      padding: 8px 15px;
    }

    .wechat-popup {
      width: 80%;
      margin: 0px auto;
      text-align: center;
      padding: 10px;

      .tiptext {
        font-size: 14px;
        line-height: 22px;
      }
    }
  }

  .wg-agreement {
    .van-checkbox__icon {
      // font-size: 18px;
      font-size: inherit;
    }
  }

  .wg-splitLine .splitLine-hr {
    border: 0 none;
    border-top: 1px solid #d3d3d3;
  }

  .wg-fixed-bottom {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    margin: 0 auto;
    z-index: 1111;
  }

  .wg-fixed-custom {
    position: fixed;
    z-index: 1211;
    width: 375px;
    height: 0 !important;

    .fixed-item {
      position: absolute !important;
      top: 0;
      transition: 0.5s;
    }
  }

  .wg-marquee {
    height: 50px;
    overflow: hidden;
  }

  .wg-marquee-up {
    -webkit-animation: marquee-up 5s 0.2s linear infinite;
    -ms-animation: marquee-up 5s 0.2s linear infinite;
    -o-animation: marquee-up 5s 0.2s linear infinite;
    animation: marquee-up 5s 0.2s linear infinite;
  }

  .wg-marquee-left {
    display: inline-flex !important;
    -webkit-animation: marquee-left 5s 0.2s linear infinite;
    -ms-animation: marquee-left 5s 0.2s linear infinite;
    -o-animation: marquee-left 5s 0.2s linear infinite;
    animation: marquee-left 5s 0.2s linear infinite;
  }

  .wg-marquee-single {
    .scroll-wrapper {
      overflow: hidden;
      padding: 0;
      margin: 0 auto;

      .scroll-item {
        height: 100%;
        padding: 2px;
      }

      .userimg {
        height: 100%;
        background-repeat: no-repeat;
        background-position: 0 center;
        background-size: 100% 100%;
      }

      .man {
        background-image: url('~@/assets/img/widget/marquee/manhead.png');
      }

      .woman {
        background-image: url('~@/assets/img/widget/marquee/womanhead.png');
      }

      .scroll-text {
        margin-left: 5px;
      }

      .anim {
        transition: all 0.5s linear;
      }
    }
  }
}